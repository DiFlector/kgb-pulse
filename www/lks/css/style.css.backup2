/* === СТИЛИ ДЛЯ СВЕРНУТОГО SIDEBAR СУПЕРПОЛЬЗОВАТЕЛЯ === */

/* Главные пункты подменю суперпользователя в свернутом состоянии */
.sidebar.collapsed .nav-link[href^="#submenu-"] {
    padding: 0.75rem 0.5rem !important;
    text-align: center !important;
    position: relative;
}

/* Иконки главных пунктов подменю остаются видимыми */
.sidebar.collapsed .nav-link[href^="#submenu-"] i:first-child {
    display: inline-block !important;
    width: auto !important;
    font-size: 1.2rem !important; /* Увеличен с 1.1rem */
    margin: 0 !important;
}

/* Скрываем текст главных пунктов подменю */
.sidebar.collapsed .nav-link[href^="#submenu-"] span {
    display: none !important;
}

/* Скрываем стрелки в свернутом состоянии */
.sidebar.collapsed .nav-link[href^="#submenu-"] .submenu-arrow {
    display: none !important;
}

/* Tooltip для главных пунктов подменю суперпользователя */
.sidebar.collapsed .nav-link[href^="#submenu-"]:hover::after {
    content: attr(data-title);
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    background: #333;
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    white-space: nowrap;
    font-size: 0.875rem;
    z-index: 1050;
    margin-left: 0.5rem;
    pointer-events: none;
}

/* Обеспечиваем правильное отображение hover эффектов */
.sidebar.collapsed .nav-link[href^="#submenu-"]:hover {
    background-color: rgba(255, 255, 255, 0.1) !important;
}

/* Активное состояние для главных пунктов подменю */
.sidebar.collapsed .nav-link[href^="#submenu-"].active {
    background-color: rgba(255, 255, 255, 0.2) !important;
}

/* === ИСПРАВЛЕНИЕ ОТОБРАЖЕНИЯ ИКОНОК ПОДМЕНЮ В СВЕРНУТОМ СОСТОЯНИИ === */

